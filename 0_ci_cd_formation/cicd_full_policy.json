{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "codedeploy:*",
        "codepipeline:*",
        "codestar-connections:*"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "iam:PassRole"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:*",
        "cloudwatch:*",
        "logs:*",
        "ec2:*",
        "ecs:*",
        "ecr:*",
        "lambda:*",
        "cloudformation:*"
      ],
      "Resource": "*"
    }
  ]
}
